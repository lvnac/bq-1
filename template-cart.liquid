<style>
  .cart-container {
    color: #4A1C29; /* Un tono más claro de bordó para el texto */
  }

  .cart-table {
    width: 100%;
    border-collapse: collapse;
  }

  .cart-table th, .cart-table td {
    padding: 10px;
    border-bottom: 1px solid #7B1E2A;
  }

  .cart-table th {
    background-color: #7B1E2A;
    color: white;
  }

  .cart-button {
    background-color: #7B1E2A;
    color: white;
    border: none;
    padding: 10px 20px;
    margin: 5px;
    cursor: pointer;
  }

  .cart-button:hover {
    background-color: #5A2C3B; /* Un tono más oscuro para el efecto hover */
  }
</style>

{% if cart.item_count > 0 %}
  <h1>Your cart</h1>        
  <div class="cart-container">
    <form action="{{ routes.cart_url }}" method="POST" novalidate>
      <table class="cart-table">
        <thead>
          <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Total Price</th>
          </tr>
        </thead>
        <tbody>
          {% for item in cart.items %}
            <tr>
              <td>
                <a href="{{ item.url }}">
                  {% if item.image %}
                    <img src="{{ item.image | img_url: 'small' }}" alt="{{ item.title | escape }}">
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: '' }}
                  {% endif %}
                </a>
              </td>
              <td>
                <a href="{{ item.url }}">{{ item.product.title | truncatewords: 5 }}</a>
                <span>{{ item.variant.title }}</span>
                <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0">Remove</a>
              </td>
              <td>
                <input type="number" name="updates[]" value="{{ item.quantity }}" min="1" id="updates_{{ forloop.index }}">
              </td>
              <td>
                {{ item.line_price | money }}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
      <div>
        <label for="cart_notes">Cart notes</label>
        <textarea name="note" id="cart_notes"></textarea>
      </div>
      <div>
        <h3>Subtotal: {{ cart.total_price | money }}</h3>
        <button type="submit" class="cart-button" name="update">Update Cart</button>
        <button type="submit" class="cart-button" name="checkout">Go to Checkout</button>
      </div>
    </form>
  </div>
{% else %}
  <h1>Your cart is empty :(</h1>
  <a href="{{ routes.all_products_collection_url }}">Continue shopping</a>
{% endif %}
