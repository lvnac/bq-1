{% paginate search.results by 10 %}
  <div class="search-results">
    <h1>Search Results</h1>
    {% if search.performed %}
      {% if search.results.size > 0 %}
        <p>{{ search.results.size }} results for the search term "{{ search.terms | escape }}"</p>
        <div class="results-list">
          {% for item in search.results %}
            {% case item.object_type %}
              {% when 'product' %}
                <div class="product-result">
                  {% render 'product-card', product: item %}
                </div>
              {% else %}
                <!-- Handle other types of objects if necessary -->
                <div class="other-result">
                  Other results (e.g., blog articles or pages).
                </div>
              {% endcase %}
          {% endfor %}
        </div>
      {% else %}
        <p>No results found for the search term: "{{ search.terms | escape }}".</p>
      {% endif %}
    {% endif %}
    <div class="pagination">
      {% render 'pagination', pagination: paginate %}
    </div>
  </div>
{% endpaginate %}
