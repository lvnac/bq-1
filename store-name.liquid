<!-- Store Name Section -->
<section id="store-name-section" class="store-name-section">
  <h1 class="store-name">{{ section.settings.store_name }}</h1>
</section>

<style>
  .store-name-section {
    text-align: center;
    margin: 20px 0;
  }

  .store-name {
    color: #7B1E2A; /* Color bordó para el nombre de la tienda */
    font-family: 'Arial', sans-serif; /* Ejemplo de fuente, ajusta según tus necesidades */
  }
</style>

{% schema %}
{
  "name": "Store Name",
  "settings": [
    {
      "type": "text",
      "id": "store_name",
      "label": "Store Name",
      "default": "Your Robot Store" /* Cambia esto al nombre predeterminado de tu tienda */
    }
  ]
}
{% endschema %}
