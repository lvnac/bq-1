<style>
  .blog-container {
    color: #4A1C29; /* Un tono más claro de bordó para el texto */
  }

  .blog-post {
    border-bottom: 1px solid #7B1E2A;
    padding-bottom: 20px;
    margin-bottom: 20px;
  }

  .blog-post img {
    max-width: 100%;
    height: auto;
  }

  .blog-post h1 {
    color: #7B1E2A;
  }

  .blog-read-more {
    color: #7B1E2A;
    text-decoration: none;
  }

  .blog-read-more:hover {
    text-decoration: underline;
  }
</style>

<div class="blog-container">
  {% paginate blog.articles by section.settings.number_of_blog_posts %}
    <h1>{{ blog.title }}</h1>
    {% for article in blog.articles %}
      <div class="blog-post">
        {% if article.image %}
          <a href="{{ article.url }}"><img src="{{ article.image | img_url: 'medium' }}" alt="{{ article.image.alt }}"></a>
        {% else %}
          {{ 'image' | placeholder_svg_tag: '' }}
        {% endif %}

        <div>
          <h1>{{ article.title }}</h1>
          {% if article.excerpt.size > 0 %}
            <p>{{ article.excerpt | strip_html | truncatewords: 15 }}</p>
          {% else %}
            <p>{{ article.content | strip_html | truncatewords: 15 }}</p>
          {% endif %}
          <a href="{{ article.url }}" class="blog-read-more">{{ section.settings.blog_read_more }}</a>
        </div>
      </div>
    {% endfor %}
      
    {% render 'pagination', pagination: paginate %}
    
  {% endpaginate %}
</div>
