// Funciones para interactividad general, como menús desplegables y manejo de eventos

// Función para manejar menús desplegables
function toggleDropdown(dropdownId) {
    var element = document.getElementById(dropdownId);
    element.classList.toggle("show");
}

// Añadir evento de escucha para cerrar menús desplegables cuando se hace clic en otro lugar
window.onclick = function(event) {
    if (!event.target.matches('.dropbtn')) {
        var dropdowns = document.getElementsByClassName("dropdown-content");
        for (var i = 0; i < dropdowns.length; i++) {
            var openDropdown = dropdowns[i];
            if (openDropdown.classList.contains('show')) {
                openDropdown.classList.remove('show');
            }
        }
    }
};

