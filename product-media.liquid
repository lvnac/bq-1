{% case media.media_type %}
  {% when 'image' %}
    <!-- Imagen -->
    <img src="{{ media | img_url: 'large' }}" alt="{{ media.preview_image.alt | default: 'DescripciÃ³n de la imagen' }}" class="tu-clase-de-imagen">

  {% when 'external_video' %}
    <!-- Video Externo (YouTube, Vimeo) -->
    {{ media | external_video_tag: class: 'tu-clase-de-video-externo' }}

  {% when 'video' %}
    <!-- Video alojado en Shopify -->
    {{ media | video_tag: controls: true, preload: 'none', class: 'tu-clase-de-video' }}

  {% when 'model' %}
    <!-- Modelo 3D -->
    {{ media | model_viewer_tag: class: 'tu-clase-de-modelo' }}

  {% else %}
    <!-- Otros tipos de medios -->
    {{ media | media_tag }}

{% endcase %}
